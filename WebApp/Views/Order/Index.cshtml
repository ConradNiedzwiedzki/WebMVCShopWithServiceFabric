@using WebMVC.ViewModels
@model IEnumerable<WebMVC.ViewModels.Order>

@{
     ViewData["Title"] = "My Orders";
     var headerList= new List<Header>() {
        new Header() { Controller = "Catalog", Text = "Back to catalog" },
        new Header() { Text = " / " }
     };
}

<div class="esh-orders">
    <partial name="_Header" model="headerList"/>

    <div class="container">
        <article class="esh-orders-titles row">
            <section class="esh-orders-title col-2">Order number</section>
            <section class="esh-orders-title col-10">Date</section>
        </article>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <article class="esh-orders-items row">
                    <section class="esh-orders-item col-2">@Html.DisplayFor(modelItem => item.OrderNumber)</section>
                    <section class="esh-orders-item col-10">@Html.DisplayFor(modelItem => item.Date)</section>
                </article>
            }
        }
    </div>
</div>




